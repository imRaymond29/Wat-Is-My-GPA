<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="raymondlam.watismygpa.MainActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="WAT is my GPA?"
        android:textAlignment="center"
        android:textSize="44.1dp"
        android:id="@+id/textView13"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Course 1"
        android:id="@+id/textbx"
        android:textSize="30dp"
        android:layout_below="@+id/textView13"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Courses"
        android:id="@+id/textView4"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignEnd="@+id/textbx"
        android:layout_marginEnd="21dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Percentage"
        android:id="@+id/textView5"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@+id/textView13"
        android:layout_toStartOf="@+id/textView6"
        android:layout_marginEnd="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Credit"
        android:id="@+id/textView6"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@+id/textView13"
        android:layout_alignEnd="@+id/textView13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Course 2"
        android:id="@+id/textView7"
        android:textSize="30dp"
        android:layout_below="@+id/textbx"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Course 3"
        android:id="@+id/textView9"
        android:textSize="30dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Course 4"
        android:id="@+id/textView10"
        android:textSize="30dp"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Course 5"
        android:id="@+id/textView11"
        android:textSize="30dp"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Course 6"
        android:id="@+id/textView12"
        android:textSize="30dp"
        android:layout_below="@+id/textView11"
        android:layout_alignEnd="@+id/textView11" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/per1"
        android:textAlignment="center"
        android:layout_above="@+id/textView7"
        android:layout_alignStart="@+id/textView5"
        android:layout_alignEnd="@+id/textView5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/per2"
        android:textAlignment="center"
        android:layout_above="@+id/textView9"
        android:layout_alignStart="@+id/per1"
        android:layout_alignEnd="@+id/per1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/per3"
        android:textAlignment="center"
        android:layout_above="@+id/textView10"
        android:layout_alignStart="@+id/per2"
        android:layout_alignEnd="@+id/per2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/per4"
        android:textAlignment="center"
        android:layout_above="@+id/textView11"
        android:layout_alignStart="@+id/per3"
        android:layout_alignEnd="@+id/per3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/per5"
        android:textAlignment="center"
        android:layout_above="@+id/textView12"
        android:layout_alignStart="@+id/per4"
        android:layout_alignEnd="@+id/per4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/per6"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/textView12"
        android:layout_alignStart="@+id/per5"
        android:layout_alignEnd="@+id/per5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/wei1"
        android:textAlignment="center"
        android:layout_alignTop="@+id/per1"
        android:layout_alignEnd="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/wei2"
        android:textAlignment="center"
        android:layout_alignTop="@+id/per2"
        android:layout_alignEnd="@+id/wei1"
        android:layout_alignStart="@+id/textView6" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/wei3"
        android:textAlignment="center"
        android:layout_alignTop="@+id/per3"
        android:layout_alignStart="@+id/textView6"
        android:layout_alignEnd="@+id/wei2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/wei4"
        android:textAlignment="center"
        android:layout_alignTop="@+id/per4"
        android:layout_alignEnd="@+id/wei3"
        android:layout_alignStart="@+id/textView6" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/wei5"
        android:textAlignment="center"
        android:layout_above="@+id/textView12"
        android:layout_alignEnd="@+id/wei4"
        android:layout_alignTop="@+id/per5"
        android:layout_alignStart="@+id/wei6" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/wei6"
        android:textAlignment="center"
        android:layout_alignTop="@+id/per6"
        android:layout_alignStart="@+id/textView6"
        android:layout_alignEnd="@+id/wei4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/calcBut"
        android:background="#f74646"
        android:layout_below="@+id/textView12"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPA:"
        android:id="@+id/textView14"
        android:textSize="20dp"
        android:layout_below="@+id/calcBut"
        android:layout_alignStart="@+id/calcBut"
        android:layout_marginTop="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Percentage:"
        android:id="@+id/textView15"
        android:textSize="20dp"
        android:layout_below="@+id/textView14"
        android:layout_alignEnd="@+id/textView14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gpaText"
        android:layout_above="@+id/textView15"
        android:layout_toEndOf="@+id/textView15"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/percentText"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/textView15"
        android:layout_alignStart="@+id/gpaText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/errorText"
        android:textSize="16dp"
        android:layout_below="@+id/per6"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

</RelativeLayout>
